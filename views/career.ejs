<script>  
    document.addEventListener('DOMContentLoaded', function() {  
        // 프로그레스 바 애니메이션  
        const progressBars = document.querySelectorAll('.progress-bar');  
        progressBars.forEach(bar => {  
            setTimeout(() => {  
                bar.style.transform = 'scaleX(1)';  
            }, 500);  
        });  
    
        // AOS 초기화  
        AOS.init({  
            duration: 1000,  
            once: false,  
            mirror: true  
        });  
    });  
</script>  